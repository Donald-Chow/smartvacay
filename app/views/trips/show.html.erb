<div class="page-content">
  <div id="trips-info">
    <h1><%= @trip.destination %> 2023</h1>
    <p><%= @trip.start_date %></p>
  </div>
  <div class="container">
    <%= link_to 'Download itinerary', generate_icalendar_trip_path(@trip), class: "btn btn-secondary mt-3 mb-3" %>
    <button onclick="window.print()" class="btn btn-secondary mt-3 mb-3" >Share as PDF </button>
    <%= simple_form_for(@trip) do |f| %>
      <% if @trip.driving == false %>
        <%= f.input :driving, as: :hidden, input_html: { value: '1' } %>
        <%= button_tag :submit, class: "btn btn-primary mb-3" do %>
          <span class="transport-btn">Switch to Driving</span> <i class="fa-solid fa-car"></i>
        <% end %>
      <% else %>
        <%= f.input :driving, as: :hidden, input_html: { value: '0' } %>
        <%= button_tag :submit, class: "btn btn-primary mb-3" do %>
          <span class="transport-btn">Switch to Public Transport</span> <i class="fa-solid fa-bus-simple"></i>
        <% end %>
      <% end %>
    <% end %>
    <div class="schedule">
      <% if @trip.itineraries == [] %>
        <div class="my-5 text-center">
          <%= link_to "Generate my itinerary", generate_trip_path(@trip), class: "btn btn-secondary" %>
        </div>
      <% else %>
        <%= render template:"itineraries/index", trip: @trip %>
      <% end %>
    </div>
  </div>
</div>
