<% @favorites.each do |favorite| %>
  <% favoritable = @category.present? ? favorite : favorite.favoritable %>
  <div class="card-location">
    <%# Bookmark starts here %>
    <div class="bookmark">
      <% if current_user %>
        <%= link_to favorite_location_path(favoritable), class: "#{"text-warning" if current_user.favorited?(favoritable)}", data: { turbo_method: :post }, onclick: "this.classList.toggle('text-warning')" do %>
          <i class="fa-solid fa-bookmark"></i>
        <% end %>
      <% end %>
    </div>
    <%# image starts here %>
    <%= link_to location_path(favoritable) do %>
      <%= favoritable.photo.present? ? image_tag(favoritable.photo.split(",")[0]) : image_tag("sample_card_image.jpeg") %>
    <% end %>
    <%# description starts here %>
    <div class="card-location-info">
      <h4><%= favoritable.name %></h4>
      <p><%= favoritable.address %></p>
    </div>
  </div>
<% end %>
